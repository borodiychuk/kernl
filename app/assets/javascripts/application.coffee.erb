angular.module("app", [
  "ngSanitize"
  "angular-loading-bar"
  "app.controllers"
  "app.resources.v1"
  "app.resources.v1.private"
  "app.services"
  "app.directives"
  "app.filters"
  "app.constants"
  "app.auth"
  "ipCookie"
  "mwTable"
  "ui.router"
  "ngWig"
  "ngFileUpload"
  "ui.sortable"
])

.constant("IDENTIFIER", "application")

.run(["$rootScope", "$state", ($rootScope, $state) ->

  $rootScope.state = $state

])

#################################################################################################
##
##  Routes and providers configuration
##

.config([
  "$stateProvider", "$urlRouterProvider", "cfpLoadingBarProvider", "TableProvider"
  ($stateProvider,   $urlRouterProvider,   cfpLoadingBarProvider,   TableProvider) ->

    # Configure Table
    TableProvider.sortingClasses =
      asc:  "uk-icon-sort-asc"
      desc: "uk-icon-sort-desc"
      none: "uk-icon-sort"
    TableProvider.params.limit = 50


    # Configure loading bar
    cfpLoadingBarProvider.includeSpinner = false
    cfpLoadingBarProvider.latencyThreshold = 5



    $stateProvider.state "landing",
      url: "/landing"
      templateUrl: "<%= asset_path "application/landing.html" %>"


    $stateProvider.state "projects",
      abstract: true
      url: "/projects"
      templateUrl: "<%= asset_path "shared/abstract.html" %>"

    $stateProvider.state "projects.project",
      abstract: true
      url: "/:project_id"
      controller:  "ProjectsViewCtrl"
      templateUrl: "<%= asset_path "shared/abstract.html" %>"

    $stateProvider.state "projects.project.products",
      url: "/products"
      templateUrl: "<%= asset_path "application/products/list.html" %>"
      controller:  "ProductsListCtrl"

    $stateProvider.state "projects.project.product",
      url: "/products/:product_id"
      templateUrl: "<%= asset_path "application/products/edit.html" %>"
      controller:  "ProductsEditCtrl"



    ##
    ##  Settings
    ##

    $stateProvider.state "profile",
      url: "/profile"
      controller: "ProfileCtrl"
      templateUrl: "<%= asset_path "application/profile.html" %>"

    $urlRouterProvider.otherwise "/landing"

])
